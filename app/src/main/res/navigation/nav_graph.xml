<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/RestaurantFragment">

    <fragment
        android:id="@+id/RestaurantFragment"
        android:name="com.example.servoo.fragments.RestaurantFragment"
        android:label="Restaurant Fragment"
        tools:layout="@layout/fragment_restaurant">

        <action
            android:id="@+id/action_Launch_Restaurant_Fragment"
            app:destination="@id/AddRestaurantFragment" />
    </fragment>
    <fragment
        android:id="@+id/AddRestaurantFragment"
        android:name="com.example.servoo.fragments.AddRestaurantFragment"
        android:label="@string/add_restaurant"
        tools:layout="@layout/fragment_add_restaurant">
        <action
            android:id="@+id/action_back_to_restaurant_page"
            app:destination="@id/RestaurantFragment" />
    </fragment>

    <fragment
        android:id="@+id/MenuFragment"
        android:name="com.example.servoo.fragments.RestaurantFragment"
        android:label="Restaurant Fragment"
        tools:layout="@layout/fragment_restaurant">

        <action
            android:id="@+id/action_Launch_Restaurant_Fragment"
            app:destination="@id/AddRestaurantFragment" />
    </fragment>

    <fragment
        android:id="@+id/OrdersFragment"
        android:name="com.example.servoo.fragments.OrdersFragment"
        android:label="Restaurant Fragment"
        tools:layout="@layout/fragment_orders">

        <action
            android:id="@+id/action_Launch_Restaurant_Fragment"
            app:destination="@id/AddRestaurantFragment" />
    </fragment>
</navigation>